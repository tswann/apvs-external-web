{
  "name": "external-web",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/apvs-external-web.git"
  },
  "engines": {
    "node": "6.x.x"
  },
  "scripts": {
    "start": "gulp",
    "generate-assets": "gulp generate-assets",
    "test": "standard && mocha --recursive -u exports test/unit/",
    "test-coverage": "istanbul cover _mocha -- --recursive -u exports test/unit/",
    "test-unit": "mocha --recursive -u exports test/unit/",
    "test-integration": "mocha --recursive -u exports test/integration/ --timeout 5000",
    "test-e2e": "gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-smoke": "gulp --gulpfile gulpfile-e2e.js e2e-smoke",
    "test-e2e-ie8": "wdio test/wdio.conf.sauce.ie8.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-ie8-jenkins": "wdio test/wdio.conf.sauce.ie8.jenkins.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "test-e2e-chrome-jenkins": "wdio test/wdio.conf.sauce.chrome.jenkins.js",
    "test-e2e-ios": "wdio test/wdio.conf.sauce.ios.js",
    "test-e2e-android": "wdio test/wdio.conf.sauce.android.js",
    "test-e2e-smoke-jenkins": "wdio test/wdio.conf.sauce.chrome.jenkins.smoke.js",
    "test-load": "cd test/load && ../../node_modules/.bin/artillery run scenarios.yaml cd ../../",
    "migrations": "knex migrate:latest --env migrations",
    "rollback": "knex migrate:rollback --env migrations"
  },
  "standard": {
    "ignore": [
      "cache_node_modules/*",
      "jquery*.js",
      "ga.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "browser",
      "$"
    ]
  },
  "dependencies": {
    "bases": "^0.2.1",
    "basic-auth": "^1.1.0",
    "body-parser": "~1.15.1",
    "bunyan": "^1.8.1",
    "bunyan-logstash-tcp": "^0.3.4",
    "bunyan-prettystream": "^0.1.3",
    "clamscan": "^0.8.4",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "express-nunjucks": "^2.0.1",
    "express-sanitized": "^0.5.1",
    "govuk-elements-sass": "^2.0.0",
    "govuk_frontend_toolkit": "^4.18.1",
    "govuk_template_jinja": "^0.18.2",
    "gulp": "^3.9.1",
    "gulp-sass": "^2.3.2",
    "helmet": "^2.1.3",
    "i18n": "^0.8.3",
    "knex": "^0.12.5",
    "mkdirp": "^0.5.1",
    "moment": "^2.15.1",
    "mssql": "^3.3.0",
    "multer": "^1.2.0",
    "node-sass": "^3.10.1",
    "nunjucks": "^2.5.1",
    "on-finished": "^2.3.0",
    "path": "^0.12.7",
    "serve-favicon": "~2.3.0",
    "sqlite3": "^3.1.8",
    "underscore": "^1.8.3",
    "validator": "^6.0.0"
  },
  "devDependencies": {
    "artillery": "^1.5.0-20",
    "assert": "^1.4.1",
    "chai": "^3.5.0",
    "gulp-webdriver": "^2.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "proxyquire": "^1.7.10",
    "selenium-standalone": "^5.7.2",
    "sinon": "^1.17.5",
    "sinon-bluebird": "^3.1.0",
    "standard": "^8.0.0",
    "supertest": "^2.0.0",
    "wdio-mocha-framework": "^0.4.3",
    "wdio-sauce-service": "^0.2.5",
    "webdriverio": "^4.2.16"
  }
}
